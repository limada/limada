<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
     <link rel="stylesheet" href="~/css/site.css" />

    <script type="text/javascript">
        function setUrl() {
            history.replaceState('Object', 'Title', '@ViewBag.Id');
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>

</head>
<body onload="setUrl(); @RenderSection("OnLoad", required: false)">
<div class="page">
    <div id="header">
        <div id="title">
            <h2>@ViewBag.Title</h2>
        </div>
        <div >
            <ul id="menu">
                <li>@(Html.ActionLink ("Home", "Index", new {Id=default(string)}))</li>
                <li>@Html.ActionLink("About", "About", new { Id = "About"})</li>
            </ul>
        </div>
    </div>
    <div id="main">
        @RenderBody()
        <div id="footer">
        </div>
    </div>
</div>
</body>
</html>

